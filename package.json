    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.8.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
